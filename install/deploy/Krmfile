kind: Krmfile
openAPI:
  definitions:
    io.k8s.cli.setters.DASHBOARD_NAME:
      description: dashboard name
      x-k8s-cli:
        setter:
          name: DASHBOARD_NAME
          value: kam-dashboard
          isSet: true
          required: true
    io.k8s.cli.setters.NAMESPACE_NAME:
      description: namespace name
      x-k8s-cli:
        setter:
          name: NAMESPACE_NAME
          value: kam
          isSet: true
          required: true
    io.k8s.cli.setters.ROUTE_NAMESPACE:
      description: route namespace
      x-k8s-cli:
        setter:
          name: ROUTE_NAMESPACE
          value: redhat-ods-applications
          isSet: true
          required: true
    io.k8s.cli.setters.IMAGE_NAME:
      description: image name
      x-k8s-cli:
        setter:
          name: IMAGE_NAME
          value: s2i-kam-dashboard
          isSet: true
          required: true
    io.k8s.cli.setters.TAG_NAME:
      description: tag name
      x-k8s-cli:
        setter:
          name: TAG_NAME
          value: v0.0.1
          isSet: true
          required: true
    io.k8s.cli.setters.REPLICAS:
      type: integer
      description: replicas
      x-k8s-cli:
        setter:
          name: REPLICAS
          value: "1"
          isSet: true
          required: true
    io.k8s.cli.substitutions.IMAGE_TAG:
      x-k8s-cli:
        substitution:
          name: IMAGE_TAG
          pattern: ${IMAGE_NAME}:${TAG_NAME}
          values:
          - marker: ${IMAGE_NAME}
            ref: '#/definitions/io.k8s.cli.setters.IMAGE_NAME'
          - marker: ${TAG_NAME}
            ref: '#/definitions/io.k8s.cli.setters.TAG_NAME'
